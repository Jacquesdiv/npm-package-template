{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
